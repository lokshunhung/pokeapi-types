# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{css,html,js,json,ts}]
indent_size = 4

[*.{yaml,yml}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
